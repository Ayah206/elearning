<% include header %>

<div class="container-fluid course-banner">
  <div class="container course-banner">
    <h4><%= course.title %></h4>
    <p>By <%= course.author.title %>. <%= course.author.firstname %> <%= course.author.lastname %></p>
  </div>
</div>

<section class="content container">
  <div class="row">
      <div class="col-md-8">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Description</h3>
            </div>
            <div class="box-body dis">
              <%- course.dis %>
            </div>
            <div class="box-header with-border">
              <h3 class="box-title">About Instructor</h3>
            </div>
             
            <div class="box-body">
              <div class="tutor-img  pull-left">
                <img  class="img-circle " style="width: 100px; height: 100px;" src="/upload/avatar/<%= course.author.avatar %>"  alt="User Avatar">
              </div>
              <p><%= course.author.bio %></p>
            </div>

          </div>
      </div>
      <div class="col-md-4">
         <div class="box box-info">
            <div class="box-body">
                <div class="text-center">
                  <img class="course-img" src="/upload/<%= course.cover %>">
                </div>
                <div class="text-center">
                  <p><%= course.participants.length %> Student joined this course </p>
                </div>
                <div class="form-group has-feedback">
<% if (currentUser && course.participants.indexOf(currentUser._id) > -1){ %>
                    <a href="/student/courseview/<%= course._id %>/material" class="btn btn-primary btn-block btn-flat">View</a>
<% } else { %>
                    <a href="/student/joincourse/<%= course._id %>" type="submit" class="btn btn-success btn-block btn-flat">Join Course</a>
<% } %>
                </div>
            </div>
          </div>
      </div>
  </div>
</section>
<% include footer %>