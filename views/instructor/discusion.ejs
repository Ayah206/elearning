<body class="hold-transition skin-blue layout-top-nav" ng-controller="discusionCtrl" ng-init="init('<%= course._id %>', '<%= currentInstructor._id %>', '<%= currentInstructor.title %>','<%= currentInstructor.firstname %>', '<%= currentInstructor.avater %>');">
<toast></toast>





            <div style="max-height: 100%;" class="box-primary direct-chat direct-chat-primary">
                <div style="position: fixed; top: 0px; width:100%; z-index: 1; background-color: white;" class="box-header with-border">
                  <h3 class="box-title">Discusion</h3>

                  <div class="box-tools pull-right">
                    <span data-toggle="tooltip" title="3 New Messages" class="badge bg-blue" ng-cloak class="ng-cloak">{{users.length}}</span>
                    <a href="/instructor/courseview/<%= course._id %>/material" class="btn btn-box-tool"><i class="fa fa-times"></i>
                    </a>
                  </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  <!-- Conversations are loaded here -->
                  <div style="padding-bottom: 50px; padding-top: 50px;" class="direct-chat-messages">

                <div ng-repeat='message in messages'>
                  
                    <!-- Message. Default to the left -->
                    <div style="margin-right: 40%;" class="direct-chat-msg" ng-cloak class="ng-cloak" ng-if ="message.tutor._id != user">
                      <div class="direct-chat-info clearfix">
                        <span class="direct-chat-name pull-left">{{ message.student.username}}</span>
                        <span class="direct-chat-timestamp pull-right">{{message.createdAt}}</span>
                      </div>
                      <!-- /.direct-chat-info -->
                      <img class="direct-chat-img" src="/upload/avatar/{{message.student.avatar || message.tutor.avatar}}" alt="message user image">
                      <!-- /.direct-chat-img -->
                      <div class="direct-chat-text">
                       {{message.message}}
                      </div>
                      <!-- /.direct-chat-text -->
                    </div>
                    <!-- /.direct-chat-msg -->

                      <div style="margin-left:40%;" class="direct-chat-msg right" ng-cloak class="ng-cloak" ng-if ="message.tutor._id == user">
                        <div class="direct-chat-info clearfix">
                          <span class="direct-chat-name pull-right">You</span>
                          <span class="direct-chat-timestamp pull-left">{{message.createdAt}}</span>
                        </div>
                        <!-- /.direct-chat-info -->
                        <img class="direct-chat-img"  src="/upload/avatar/{{message.student.avatar || message.tutor.avatar}}" alt="message user image">
                        <!-- /.direct-chat-img -->
                        <div class="direct-chat-text">
                         {{message.message}}
                        </div>
                        <!-- /.direct-chat-text -->
                      </div>
                      <!-- /.direct-chat-msg -->


                    </div>

                   



                    

                  </div>
                  <!--/.direct-chat-messages-->
 <div  style="position: fixed; width: 100%; padding-bottom: 50px; padding-top: 50px;"  class="direct-chat-contacts">
                    <ul ng-repeat='user in users' class="contacts-list">
                      <li>
                        <a href="#">
                          <img class="contacts-list-img" src="/upload/{{user.avater}}" alt="User Image">

                          <div class="contacts-list-info">
                                <span class="contacts-list-name">
                                  {{user.user}}
                                  <small class="contacts-list-date pull-right">1/4/2015</small>
                                </span>
                            <span class="contacts-list-msg">Never mind I found...</span>
                          </div>
                          <!-- /.contacts-list-info -->
                        </a>
                      </li>
                      <!-- End Contact Item -->
                    </ul>
                    <!-- /.contatcts-list -->
                  </div>
                  <!-- /.direct-chat-pane -->
                </div>
                <!-- /.box-body -->
                <div style="position: fixed; bottom: 0px; width: 100%;" class="box-footer">
                  <form ng-submit="send('<%= course._id %>', '<%= currentInstructor._id %>')">
                    <div class="input-group">
                      <input type="text" name="message" ng-model="message" placeholder="Type Message ..." class="form-control">
                      <span class="input-group-btn">
                      <button type="submit" class="btn btn-primary btn-flat">Send</button>
                          </span>
                    </div>
                  </form>
                </div>
                <!-- /.box-footer-->
              </div>
              <!--/.direct-chat -->
                 
                 
                   


                     
                    



   
   
  
