<% include header %>


<section class="content container">
          <div class="box box-solid">
            <div class="box-body">
              <div class="row">

                <div class="col-md-12" >
                  <div class="box box-solid">

                      <div class="box-header with-border">
                      <h3 class="box-title">Assignments 
                        <small><%= course.title %></small>
                      </h3>
                      <% include menu %>
                    </div>


                 
                  <div class="row">

                    <div class="col-md-9" >
                         <div class="box-body">
                      <div class="box-group" id="accordion">
                        <!-- we are adding the .panel class so bootstrap.js collapse plugin detects it -->
<%for (var assignment in assignments){%>
        <div class="panel box box-primary">
          <div class="box-header with-border">
            <h4 class="box-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#<%= assignment %>">
                <%= assignments[assignment].title %>
                 <a style="margin: 10px; padding: 10px;" href="/instructor/courseview/<%= assignments[assignment]._id %>/removeassignment" class="btn btn-xs btn-primary btn-flat">Remove</a>
                 <a style="margin: 10px; padding: 10px;" href="/instructor/courseview/<%= assignments[assignment]._id %>/editassignment" class="btn btn-xs btn-primary btn-flat">Edit</a>
                 <a style="margin: 10px; padding: 10px;" href="/instructor/courseview/<%= assignments[assignment]._id %>/submission" class="btn btn-xs btn-primary btn-flat">View Submissions</a>
              </a>
            </h4>
          </div>
          <div id="<%= assignment %>" class="panel-collapse collapse ">
            <div class="box-body">
              <%- assignments[assignment].content %>

              <h3>Downloads</h3>
              <a href="/upload/<%- assignments[assignment].file %>" download="/upload/<%- assignments[assignment].file %>"><%- assignments[assignment].file %></a>

              <h5>Submission Date</h5>
              <p style="color: red;"><%= moment(assignments[assignment].submissionDate).format('MMM Do YYYY') %></p>

            </div>
              
          </div>
        </div>            
<% } %>
                       
                      </div>
                    </div>
            <!-- /.box-body -->
                    </div>

                    <div class="col-md-3">
                          <div class=" " style="margin: 20px; border-style: solid; border-color: #e0e0e0; border-width: 2px; padding: 20px;">
                          <p> 
                            You can add new assignment here
                          </p>
                          <div class="form-group has-feedback" style="margin: 0px;">
                              <a href="/instructor/courseview/<%= course._id %>/addassignment" class="btn btn-primary btn-block btn-flat">Add Assignment</a>
                          </div>
                    </div>
                    </div>

                  </div>
                   


                     
                    
                  </div>
                </div>

               
              </div>


            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
</section>
<% include footer %>