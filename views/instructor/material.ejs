<% include header %>


<section class="content container">
          <div class="box box-solid">
            <div class="box-body">
              <div class="row">

                <div class="col-md-12" >
                  <div class="box box-solid">

                      <div class="box-header with-border">
                      <h3 class="box-title">Materials 
                        <small><%= course.title %></small>
                      </h3>
                      <% include menu %>
                    </div>


                 
                  <div class="row">

                    <div class="col-md-9" >
                         <div class="box-body">
                      <div class="box-group" id="accordion">
                        <!-- we are adding the .panel class so bootstrap.js collapse plugin detects it -->
<%for (var material in materials){%>
                        <div class="panel box box-primary">
                          <div class="box-header with-border">
                            <h4 class="box-title">
                              <a data-toggle="collapse" data-parent="#accordion" href="#<%= material %>">
                                <%= materials[material].title %>
                                 <a href="/instructor/courseview/<%= materials[material]._id %>/removematerial" class="btn btn-xs btn-primary btn-flat">Remove</a>
                              </a>
                            </h4>
                          </div>
                          <div id="<%= material %>" class="panel-collapse collapse ">
                            <div class="box-body">
                              <%- materials[material].dis %>

                              <h3>Downloads</h3>
                              <a href="/upload/<%- materials[material].file %>" download="/upload/<%- materials[material].file %>"><%- materials[material].file %></a>
                            </div>
                              
                          </div>
                        </div>
<% } %>
                       
                      </div>
                    </div>
            <!-- /.box-body -->
                    </div>

                    <div class="col-md-3">
                          <div class=" " style="margin: 20px; border-style: solid; border-color: #e0e0e0; border-width: 2px; padding: 20px;">
                          <p> 
                            You can add new course material here
                          </p>
                          <div class="form-group has-feedback" style="margin: 0px;">
                              <a href="/instructor/courseview/<%= course._id %>/addmaterial" class="btn btn-primary btn-block btn-flat">Add Material</a>
                          </div>
                    </div>
                    </div>

                  </div>
                   


                     
                    
                  </div>
                </div>

               
              </div>


            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
</section>
<% include footer %>